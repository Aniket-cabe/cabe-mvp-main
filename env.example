# =============================================================================
# CaBE Arena - Environment Variables for Production Deployment
# =============================================================================

# =============================================================================
# REQUIRED VARIABLES (Must be set for production)
# =============================================================================

# Node Environment
NODE_ENV=production
PORT=5000

# Database Configuration
# MongoDB (Primary Database)
DATABASE_URL=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
DB_POOL_SIZE=10

# PostgreSQL/Supabase (Optional - for additional features)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_ANON_KEY=your-anon-key

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4

# =============================================================================
# OPTIONAL VARIABLES (Will use defaults if not set)
# =============================================================================

# Redis Configuration (optional - for caching and queues)
REDIS_URL=redis://default:password@host:port

# CORS Configuration
CORS_ORIGIN=https://your-frontend-domain.com

# Database SSL Configuration
FORCE_DB_SSL=true

# WebSocket Configuration
WEBSOCKET_PORT=8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DEVELOPMENT VARIABLES (for local development)
# =============================================================================

# Local Development Database
# DATABASE_URL=mongodb://localhost:27017/cabe_arena_dev

# Local Development Redis
# REDIS_URL=redis://localhost:6379

# Development Environment
# NODE_ENV=development

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS (Optional)
# =============================================================================

# Airtable Integration
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-airtable-base-id

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable features
ENABLE_AI_SCORING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_SLACK_NOTIFICATIONS=false
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true

# =============================================================================
# FILE UPLOAD CONFIGURATION (Optional)
# =============================================================================

# File upload limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log level
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# Session configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true

# =============================================================================
# CLUSTER CONFIGURATION (Optional)
# =============================================================================

# Cluster settings
CLUSTER_ENABLED=false
CLUSTER_WORKERS=4

# =============================================================================
# FRONTEND URL (Required for CORS)
# =============================================================================

FRONTEND_URL=https://your-frontend-domain.com
