# =============================================================================
# CaBE Arena - Environment Variables for Replit Deployment
# =============================================================================

# =============================================================================
# REQUIRED VARIABLES (Must be set for production)
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
DB_POOL_SIZE=10

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
NODE_ENV=production

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# =============================================================================
# OPTIONAL VARIABLES (Will use defaults if not set)
# =============================================================================

# Redis Configuration (optional - for caching and queues)
REDIS_URL=redis://default:password@host:port

# CORS Configuration
CORS_ORIGINS=https://your-replit-url.repl.co,https://your-replit-url.replit.dev

# Database SSL Configuration
FORCE_DB_SSL=true

# Server Configuration
PORT=5000

# =============================================================================
# DEVELOPMENT VARIABLES (for local development)
# =============================================================================

# Local Development Database
# DATABASE_URL=postgresql://localhost:5432/cabe_arena_dev

# Local Development Redis
# REDIS_URL=redis://localhost:6379

# Development Environment
# NODE_ENV=development

# =============================================================================
# REPLIT-SPECIFIC CONFIGURATION
# =============================================================================

# Replit automatically sets these:
# REPL_ID=your-repl-id
# REPL_SLUG=your-repl-slug
# REPL_OWNER=your-username

# =============================================================================
# EXTERNAL SERVICE INTEGRATIONS (Optional)
# =============================================================================

# Airtable Integration
AIRTABLE_API_KEY=your-airtable-api-key
AIRTABLE_BASE_ID=your-airtable-base-id

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================

# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_ANALYTICS=true
ENABLE_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true

# =============================================================================
# RATE LIMITING (Optional)
# =============================================================================

# Rate limiting configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# =============================================================================
# FILE UPLOAD CONFIGURATION (Optional)
# =============================================================================

# File upload limits
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# =============================================================================
# LOGGING CONFIGURATION (Optional)
# =============================================================================

# Log level
LOG_LEVEL=info

# =============================================================================
# SECURITY CONFIGURATION (Optional)
# =============================================================================

# Session configuration
SESSION_SECRET=your-session-secret-key
SESSION_MAX_AGE=86400000

# Password policy
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARS=true
