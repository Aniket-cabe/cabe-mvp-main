{
  "name": "cabe-arena",
  "version": "1.0.0",
  "description": "Cabe Arena Monorepo - Full-stack application with React frontend and Express backend",
  "private": true,
  "scripts": {
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "yarn workspace @cabe-arena/backend dev",
    "dev:frontend": "yarn workspace @cabe-arena/frontend dev",
    "dev:cluster": "yarn workspace @cabe-arena/backend dev:cluster",
    "build": "yarn workspaces run build",
    "build:backend": "yarn workspace @cabe-arena/backend build",
    "build:frontend": "yarn workspace @cabe-arena/frontend build",
    "test": "yarn workspaces run test",
    "test:backend": "yarn workspace @cabe-arena/backend test",
    "test:frontend": "yarn workspace @cabe-arena/frontend test",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:load": "node tools/load-test.js",
    "test:load:advanced": "node tools/advanced-load-test.js",
    "test:smoke": "bash tools/smoke-test.sh",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1",
    "test:unit": "yarn workspace @cabe-arena/backend test:unit && yarn workspace @cabe-arena/frontend test:unit",
    "test:integration": "yarn workspace @cabe-arena/backend test:integration && yarn workspace @cabe-arena/frontend test:integration",
    "test:coverage": "yarn workspace @cabe-arena/backend test:coverage && yarn workspace @cabe-arena/frontend test:coverage",
    "test:performance": "npm run test:load && npm run test:load:advanced",
    "test:security": "yarn workspace @cabe-arena/backend test:security",
    "test:deployment": "powershell -ExecutionPolicy Bypass -File scripts/test-deployment.ps1",
    "test:comprehensive": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security",
    "deploy:validate": "bash scripts/deploy-production.sh",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "yarn workspaces run type-check",
    "clean": "yarn workspaces run clean",
    "prepare": "husky install",
    "deploy:audit": "node -e \"console.log('Running deployment audit...'); require('./COMPREHENSIVE-DEPLOYMENT-AUDIT-REPORT.md')\"",
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "start:backend": "yarn workspace @cabe-arena/backend start",
    "start:frontend": "yarn workspace @cabe-arena/frontend preview"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=4.0.0"
  },
  "pnpm": {
    "lockfile": "pnpm-lock.yaml",
    "overrides": {
      "typescript": "^5.3.2"
    }
  }
}
