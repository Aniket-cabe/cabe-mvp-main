{
  "name": "cabe-arena",
  "version": "1.0.0",
  "description": "Cabe Arena Monorepo - Full-stack application with React frontend and Express backend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared/*"
  ],
  "scripts": {
    "build:frontend": "yarn workspace @cabe-arena/frontend build",
    "build:backend": "yarn workspace @cabe-arena/backend build",
    "build": "yarn build:backend && yarn build:frontend",
    "start:backend": "yarn workspace @cabe-arena/backend start",
    "start:frontend": "yarn workspace @cabe-arena/frontend preview",
    "start": "concurrently \"yarn start:backend\" \"yarn start:frontend\"",
    "dev": "concurrently \"yarn workspace backend dev\" \"yarn workspace frontend dev\"",
    "dev:backend": "yarn workspace backend dev",
    "dev:frontend": "yarn workspace frontend dev",
    "dev:cluster": "yarn workspace backend dev:cluster",
    "test": "yarn workspace backend test && yarn workspace frontend test",
    "test:backend": "yarn workspace backend test",
    "test:frontend": "yarn workspace frontend test",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:load": "node tools/load-test.js",
    "test:load:advanced": "node tools/advanced-load-test.js",
    "test:smoke": "bash tools/smoke-test.sh",
    "test:all": "yarn test:unit && yarn test:integration && yarn test:e2e",
    "test:unit": "yarn workspace backend test:unit && yarn workspace frontend test:unit",
    "test:integration": "yarn workspace backend test:integration && yarn workspace frontend test:integration",
    "test:coverage": "yarn workspace backend test:coverage && yarn workspace frontend test:coverage",
    "test:performance": "yarn test:load && yarn test:load:advanced",
    "test:security": "yarn workspace backend test:security",
    "test:deployment": "powershell -ExecutionPolicy Bypass -File scripts/test-deployment.ps1",
    "test:comprehensive": "yarn test:unit && yarn test:integration && yarn test:e2e && yarn test:performance && yarn test:security",
    "railway:deploy": "powershell -ExecutionPolicy Bypass -File scripts/railway-deploy.ps1",
    "railway:deploy:skip-build": "powershell -ExecutionPolicy Bypass -File scripts/railway-deploy.ps1 -SkipBuild",
    "deploy:validate": "bash scripts/deploy-production.sh",
    "verify:replit": "node scripts/replit-compat-check.js",
    "validate:production": "node scripts/validate-production.js",
    "deploy:render": "yarn build:backend",
    "deploy:vercel": "yarn build:frontend",
    "deploy:railway": "yarn build",
    "deploy:full": "yarn build && yarn validate:production",
    "lint": "yarn workspace backend lint && yarn workspace frontend lint",
    "lint:fix": "yarn workspace backend lint:fix && yarn workspace frontend lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "yarn workspace backend type-check && yarn workspace frontend type-check",
    "clean": "yarn workspace backend clean && yarn workspace frontend clean",
    "prepare": "husky install",
    "deploy:audit": "node -e \"console.log('Running deployment audit...'); require('./COMPREHENSIVE-DEPLOYMENT-AUDIT-REPORT.md')\"",
    "start:replit": "node server.js",
    "install:all": "yarn install",
    "railway:build": "yarn build"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18 <=22",
    "yarn": ">=1.22.22"
  },
  "packageManager": "yarn@1.22.22",
  "overrides": {
    "typescript": "^5.3.2",
    "eslint-plugin-react": "^7.33.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
