{
  "name": "cabe-arena",
  "version": "1.0.0",
  "description": "Cabe Arena Monorepo - Full-stack application with React frontend and Express backend",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:cluster": "npm run dev:cluster --workspace=backend",
    "build": "npm run build --workspaces",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "test": "npm run test --workspaces",
    "test:backend": "npm run test --workspace=backend",
    "test:frontend": "npm run test --workspace=frontend",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:load": "node tools/load-test.js",
    "test:load:advanced": "node tools/advanced-load-test.js",
    "test:smoke": "bash tools/smoke-test.sh",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/run-all-tests.ps1",
    "test:unit": "npm run test:unit --workspace=backend && npm run test:unit --workspace=frontend",
    "test:integration": "npm run test:integration --workspace=backend && npm run test:integration --workspace=frontend",
    "test:coverage": "npm run test:coverage --workspace=backend && npm run test:coverage --workspace=frontend",
    "test:performance": "npm run test:load && npm run test:load:advanced",
    "test:security": "npm run test:security --workspace=backend",
    "test:deployment": "powershell -ExecutionPolicy Bypass -File scripts/test-deployment.ps1",
    "test:comprehensive": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance && npm run test:security",
    "deploy:validate": "bash scripts/deploy-production.sh",
    "verify:replit": "node scripts/replit-compat-check.js",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "npm run type-check --workspaces",
    "clean": "npm run clean --workspaces",
    "prepare": "husky install",
    "deploy:audit": "node -e \"console.log('Running deployment audit...'); require('./COMPREHENSIVE-DEPLOYMENT-AUDIT-REPORT.md')\"",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "start:backend": "npm run start --workspace=backend",
    "start:frontend": "npm run preview --workspace=frontend",
    "start:replit": "node server.js",
    "install:all": "npm install && npm run build:backend"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "concurrently": "^8.2.2",
    "cypress": "^13.6.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.54.0",
    "eslint-plugin-import": "^2.32.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "overrides": {
    "typescript": "^5.3.2"
  }
}
