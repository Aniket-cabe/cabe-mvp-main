{
  "name": "@cabe-arena/backend",
  "version": "1.0.0",
  "description": "Cabe Arena Backend - Express API with TypeScript and cluster support",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/cluster.ts",
    "dev:cluster": "tsx src/cluster.ts",
    "build": "tsup --clean",
    "start": "node dist/cluster.cjs",
    "start:single": "node dist/index.cjs",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:unit": "vitest --config vitest.unit.config.ts",
    "test:integration": "vitest --config vitest.integration.config.ts",
    "test:security": "vitest --config vitest.security.config.ts",
    "test:performance": "vitest --config vitest.performance.config.ts",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "audit:nightly": "tsx scripts/run-nightly-arena-audit.ts",
    "audit:test": "tsx scripts/run-nightly-arena-audit.ts --test",
    "slack:test": "tsx scripts/test-slack-notifications.ts",
    "metrics:test": "tsx scripts/test-audit-metrics.ts",
    "export:test": "tsx scripts/test-audit-export.ts",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "db:migrate": "tsx scripts/migrate-database.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "format": "prettier --write src/**/*.{ts,js,json,md}",
    "format:check": "prettier --check src/**/*.{ts,js,json,md}"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "airtable": "^0.12.2",
    "ajv": "^8.12.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "express-http-proxy": "^1.6.3",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^2.0.1",
    "express-status-monitor": "^1.3.4",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "openai": "^4.20.1",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.0",
    "prom-client": "^15.0.0",
    "rate-limiter-flexible": "^4.0.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "winston": "^3.11.0",
    "xss-clean": "^0.1.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cabe-arena/eslint-config": "file:../shared/eslint-config",
    "@faker-js/faker": "^8.4.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^3.15.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.21",
    "@types/express-status-monitor": "^1.3.0",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^6.4.17",
    "@types/passport": "^1.0.17",
    "@types/passport-azure-ad": "^4.3.6",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/redis": "^4.0.11",
    "@types/socket.io": "^3.0.2",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/ui": "^1.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest-extended": "^4.0.2",
    "nock": "^13.3.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "testcontainers": "^10.7.1",
    "tsx": "^4.6.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.18.0 <19.0.0"
  },
  "packageManager": "npm@>=10"
}
